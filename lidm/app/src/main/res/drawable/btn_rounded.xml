<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <gradient android:angle="-90" android:startColor="#FF27AC"      android:endColor="#FF27AC"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#FE069F" />
            <solid android:color="#FF23AB"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="0.7dip" android:color="#ff4081" />
            <gradient android:angle="-90" android:startColor="#FE069F" android:endColor="#FE069F" />
        </shape>
    </item>

</selector>